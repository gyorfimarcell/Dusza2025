<local:CustomPage x:Class="Cluster.ClusterChangeLogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Cluster"
      xmlns:controls="clr-namespace:Cluster.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClusterChangeLogsPage"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  >
    <local:CustomPage.HeaderControls>
        <StackPanel Orientation="Horizontal">
            <ui:TextBox x:Name="tbFilter"
                    VerticalAlignment="Center"
                    PlaceholderText="Filter..."
                    Icon="{ui:SymbolIcon Search20}"
                    Width="200"
                    Margin="0 0 4 0"
                    TextChanged="tbFilter_TextChanged"/>
            <Menu FontSize="14">
                <ui:MenuItem x:Name="MenuItemSort"
                         Icon="{ui:SymbolIcon ArrowSort20}">
                    <ui:MenuItem Header="Name"
                             Icon="{ui:SymbolIcon Tag20}"
                             Tag="0"
                             FontWeight="Bold"
                             StaysOpenOnClick="True"
                             Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Processor Usage"
                             Icon="{ui:SymbolIcon DeveloperBoard20}"
                             Tag="1"
                             StaysOpenOnClick="True"
                             Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Processor Usage (%)"
                             Icon="{ui:SymbolIcon DeveloperBoard20}"
                             Tag="2"
                             StaysOpenOnClick="True"
                             Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Processor Capacity"
                             Icon="{ui:SymbolIcon DeveloperBoard20}"
                             Tag="3"
                             StaysOpenOnClick="True"
                             Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Memory Usage"
                             Icon="{ui:SymbolIcon Ram20}"
                             Tag="4"
                             StaysOpenOnClick="True"
                             Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Memory Usage (%)"
                             Icon="{ui:SymbolIcon Ram20}"
                             Tag="5"
                             StaysOpenOnClick="True"
                             Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Memory Capacity"
                             Icon="{ui:SymbolIcon Ram20}"
                             Tag="6"
                             StaysOpenOnClick="True"
                             Click="MenuItemSort_Click"/>
                    <Separator/>
                    <ui:MenuItem x:Name="MenuItemSortOrder"
                             Header="Descending"
                             IsCheckable="True"
                             StaysOpenOnClick="True"
                             Click="MenuItemSortOrder_Click"/>
                </ui:MenuItem>
                <Separator/>
            </Menu>
        </StackPanel>
    </local:CustomPage.HeaderControls>
    <Grid>
        <StackPanel x:Name="stLogs" Margin="10"></StackPanel>
    </Grid>
</local:CustomPage>
