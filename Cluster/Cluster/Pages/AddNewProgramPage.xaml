<Page x:Class="Cluster.AddNewProgramPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Cluster"
      mc:Ignorable="d" 
      Title="New Program"
      d:DesignHeight="750"
      d:DesignWidth="1200"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="New Program Name:" Margin="0 20 0 0" />
            <TextBox x:Name="txtProgramName" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0 0 20 0">
                    <TextBlock Text="Active Programs:" Margin="0 20 0 0" />
                    <TextBox x:Name="txtActivePrograms" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10 0 10 0">
                    <TextBlock Text="CPU Millicore:" Margin="0 20 0 0" />
                    <TextBox x:Name="txtCpuMilliCore" />
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="20 0 0 0">
                    <TextBlock Text="Memory:" Margin="0 20 0 0" />
                    <TextBox x:Name="txtMemory" />
                </StackPanel>
            </Grid>
            <Button x:Name="btnSave" Content="Save" Margin="0 20 0 0" Click="btnSave_Click" />
        </StackPanel>
        <ui:SnackbarPresenter x:Name="snackbarPresenter" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Page>
