<Page x:Class="Cluster.NewInstancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Cluster" xmlns:controls="clr-namespace:Cluster.Controls"
      mc:Ignorable="d"
      Title="New Instance"
      ui:NavigationView.HeaderContent="New"
      d:DesignHeight="750"
      d:DesignWidth="1200"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <StackPanel Margin="48 0">
        <controls:CustomCard Title="Program"
                         Icon="{ui:SymbolIcon Apps20 }"
                         Margin="0 0 0 12">
            <ComboBox x:Name="cbProgram"
                      MinWidth="250"
                      SelectionChanged="cbProgram_SelectionChanged"/>
        </controls:CustomCard>
        <controls:CustomCard Title="Computer"
                         Icon="{ui:SymbolIcon Server20}"
                         Margin="0 0 0 12">
            <ComboBox x:Name="cbComputer"
                      MinWidth="250"/>
        </controls:CustomCard>
        <controls:CustomCard Title="Active"
                 Icon="{ui:SymbolIcon VideoPlayPause20}"
                 Margin="0 0 0 12">
            <ui:ToggleSwitch x:Name="tsActive"
                             IsChecked="True"/>
        </controls:CustomCard>

        <ui:Button x:Name="btnAdd"
               Appearance="Primary"
               HorizontalAlignment="Right"
               MinWidth="300"
               Content="Run"
               Click="btnAdd_Click" />
    </StackPanel>
</Page>
