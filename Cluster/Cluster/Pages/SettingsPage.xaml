<local:CustomPage x:Class="Cluster.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Cluster"
      xmlns:controls="clr-namespace:Cluster.Controls"
      mc:Ignorable="d" 
      Title="SettingsPage"
      d:DesignHeight="750"
      d:DesignWidth="1200"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <StackPanel Margin="48 0">
        <controls:CustomCard Title="Language"
                         Icon="{ui:SymbolIcon Globe20}"
                         Margin="0 0 0 12">
            <ComboBox x:Name="cbLanguage"
                      MinWidth="250"
                      SelectedIndex="0">
                <ComboBoxItem Content="Hungarian" Tag="hu-HU" />
                <ComboBoxItem Content="English" Tag="en-US" />
            </ComboBox>
        </controls:CustomCard>
        <controls:CustomCard Title="Dark mode"
                         Icon="{ui:SymbolIcon WeatherMoon20}"
                         Margin="0 0 0 12">
            <ui:ToggleSwitch x:Name="tsDarkmode"
                             Click="tsDarkmode_Click"/>
        </controls:CustomCard>
    </StackPanel>
</local:CustomPage>
