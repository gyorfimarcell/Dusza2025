<Page x:Class="Cluster.ShutdownProgramPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Cluster"
        mc:Ignorable="d"
        Title="Shutdown Program"
        d:DesignHeight="750"
        d:DesignWidth="1200"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center">Shutdown a program</TextBlock>
            <ListBox x:Name="lbCurrentPrograms" Width="300" Height="300" SelectionChanged="lbCurrentPrograms_SelectionChanged" />
            <Button x:Name="btnShutdown" Width="200" Visibility="Hidden" Click="btnShutdown_Click">Shutdown</Button>
        </StackPanel>
    </Grid>
</Page>
