<Page x:Class="Cluster.ModifyProgramPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"  
        xmlns:local="clr-namespace:Cluster"
        mc:Ignorable="d"
        Title="Modify Program"
        d:DesignHeight="750"
        d:DesignWidth="1200"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="20">
            <TextBlock HorizontalAlignment="Center">Modify a program</TextBlock>
            <ListBox x:Name="lbCurrentPrograms" Width="300" Height="300" SelectionChanged="lbCurrentPrograms_SelectionChanged" />
            <Button x:Name="btnModify" Width="200" Visibility="Hidden" Click="btnModify_Click">Modify</Button>
        </StackPanel>
        <StackPanel x:Name="stEdit" HorizontalAlignment="Right" Margin="20" VerticalAlignment="Top" Width="300" Height="300" Visibility="Hidden">
            <TextBlock x:Name="txtProgram" HorizontalAlignment="Center">Program</TextBlock>
            <TextBlock Text="Active Programs:" Margin="0 20 0 0" />
            <TextBox x:Name="txtActivePrograms" />
            <TextBlock Text="CPU Millicore:" Margin="0 20 0 0" />
            <TextBox x:Name="txtCpuMilliCore" />
            <TextBlock Text="Memory:" Margin="0 20 0 0" />
            <TextBox x:Name="txtMemory" />
            <Button x:Name="btnSave" Content="Save" Margin="0 20 0 0" Click="btnSave_Click" />
        </StackPanel>
    </Grid>
</Page>
