<local:CustomPage x:Class="Cluster.ProcessesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:Cluster" xmlns:controls="clr-namespace:Cluster.Controls" xmlns:visualelements="clr-namespace:LiveChartsCore.SkiaSharpView.VisualElements;assembly=LiveChartsCore.SkiaSharpView"
                  mc:Ignorable="d" 
      Title="Processes"
      d:DesignHeight="750"
      d:DesignWidth="1200"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <local:CustomPage.HeaderControls>
        <StackPanel Orientation="Horizontal">
            <ui:TextBox x:Name="tbFilter"
                        VerticalAlignment="Center"
                        PlaceholderText="Filter..."
                        Icon="{ui:SymbolIcon Search20}"
                        Width="200"
                        Margin="0 0 4 0"
                        TextChanged="tbFilter_TextChanged"/>
            <Menu FontSize="14">
                <ui:MenuItem x:Name="menuItemPrograms"
                             Icon="{ui:SymbolIcon Apps20}"
                             StaysOpenOnClick="True"/>
                <ui:MenuItem x:Name="MenuItemStatus"
                             Icon="{ui:SymbolIcon VideoPlayPause20}"
                             StaysOpenOnClick="True">
                    <ui:MenuItem Header="All"
                                 Icon="{ui:SymbolIcon VideoPlayPause20}"
                                 Tag="0"
                                 FontWeight="Bold"
                                 StaysOpenOnClick="True"
                                 Click="MenuItemStatus_Click"/>
                    <ui:MenuItem Header="Active only"
                                 Icon="{ui:SymbolIcon Play20}"
                                 Tag="1"
                                 StaysOpenOnClick="True"
                                 Click="MenuItemStatus_Click"/>
                    <ui:MenuItem Header="Inactive only"
                                 Icon="{ui:SymbolIcon Pause20}"
                                 Tag="2"
                                 StaysOpenOnClick="True"
                                 Click="MenuItemStatus_Click"/>
                </ui:MenuItem>
                <ui:MenuItem x:Name="MenuItemSort"
                             Icon="{ui:SymbolIcon ArrowSort20}">
                    <ui:MenuItem Header="Program"
                                 Icon="{ui:SymbolIcon Apps20}"
                                 Tag="0"
                                 StaysOpenOnClick="True"
                                 Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Id"
                                 Icon="{ui:SymbolIcon NumberSymbol20}"
                                 Tag="1"
                                 FontWeight="Bold"
                                 StaysOpenOnClick="True"
                                 Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Processor Usage"
                                 Icon="{ui:SymbolIcon DeveloperBoard20}"
                                 Tag="2"
                                 StaysOpenOnClick="True"
                                 Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Memory Usage"
                                 Icon="{ui:SymbolIcon Ram20}"
                                 Tag="3"
                                 StaysOpenOnClick="True"
                                 Click="MenuItemSort_Click"/>
                    <ui:MenuItem Header="Start time"
                                 Icon="{ui:SymbolIcon Clock20}"
                                 Tag="4"
                                 StaysOpenOnClick="True"
                                 Click="MenuItemSort_Click"/>
                    <Separator/>
                    <ui:MenuItem x:Name="MenuItemSortOrder"
                                  Header="Descending"
                                  IsCheckable="True"
                                  StaysOpenOnClick="True"
                                  Click="MenuItemSortOrder_Click"/>
                </ui:MenuItem>
                <Separator/>
                <ui:MenuItem Header="Export"
                             Icon="{ui:SymbolIcon Share20}"
                             Click="MenuItemExport_Click"/>
                <ui:MenuItem Header="New"
                             Icon="{ui:SymbolIcon Add20}"
                             Click="MenuItemNew_Click"/>
            </Menu>
        </StackPanel>
    </local:CustomPage.HeaderControls>
    <Grid Margin="46 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition x:Name="chartsRow" Height="250"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ui:TextBlock x:Name="tbCount"
                      Grid.ColumnSpan="2"
                      FontTypography="Body"
                      Margin="0 0 0 4"/>

        <lvc:CartesianChart x:Name="barPrograms"
                            Grid.Row="1"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">
            <lvc:CartesianChart.Title>
                <visualelements:LabelVisual Text="Programs"/>
            </lvc:CartesianChart.Title>
        </lvc:CartesianChart>

        <lvc:PieChart x:Name="pieComputers"
                      Grid.Row="1"
                      Grid.Column="1"
                      Height="200"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch">
            <lvc:PieChart.Title>
                <visualelements:LabelVisual Text="Computers"/>
            </lvc:PieChart.Title>
        </lvc:PieChart>

        <ItemsControl x:Name="icProcesses"
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      Focusable="False">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:Process}">
                    <controls:ProcessCard Process="{Binding Path=.}"
                                          ShowComputer="True"
                                          Margin="0 0 0 8"
                                          OnProcessShutdown="ProcessCard_OnProcessChange"
                                          OnProcessActivate="ProcessCard_OnProcessChange"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</local:CustomPage>
