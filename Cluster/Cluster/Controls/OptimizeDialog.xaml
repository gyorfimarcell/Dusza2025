<UserControl x:Class="Cluster.Controls.OptimizeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cluster.Controls" xmlns:controls="clr-namespace:Cluster.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
             >
    <Grid>
        <StackPanel x:Name="spDialogContent">
            <TextBlock Text="Set the optimal minimum and maximum usage percentage of a computer!" 
                       TextWrapping="Wrap" FontSize="16" TextAlignment="Center" FontWeight="Bold" 
                       Margin="0 20 0 40"/>
            
            <Label Content="Minimum Percentage" HorizontalAlignment="Center" 
                   FontSize="20" FontWeight="Medium"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Slider x:Name="sliMinimumPercentage" 
                        Width="200" Margin="20 10 20 10" Minimum="0" Maximum="100" Value="0"
                        IsSnapToTickEnabled="True" TickFrequency="1" TickPlacement="None"/>
                <ui:TextBlock x:Name="txtMinimumPercentage" Text="0 %" VerticalAlignment="Center" 
                              FontSize="18" FontWeight="Bold"/>
            </StackPanel>
            
            <Label Content="Maximum Percentage" HorizontalAlignment="Center" 
                   FontSize="20" FontWeight="Medium"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Slider x:Name="sliMaximumPercentage" 
                        Width="200" Margin="20 10 20 10" Minimum="0" Maximum="100" Value="100"
                        IsSnapToTickEnabled="True" TickFrequency="1" TickPlacement="None"/>
                <ui:TextBlock x:Name="txtMaximumPercentage" Text="100 %" VerticalAlignment="Center"
                               FontSize="18" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
