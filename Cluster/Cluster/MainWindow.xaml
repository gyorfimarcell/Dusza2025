<ui:FluentWindow x:Name="fluentWindow" x:Class="Cluster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        xmlns:local="clr-namespace:Cluster"
        mc:Ignorable="d"
        Title="Cluster Management"
        Height="750"
        Width="1200"
        Closed="FluentWindow_Closed"
        ExtendsContentIntoTitleBar="True"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ui:NavigationView x:Name="RootNavigation"
                           TitleBar="{Binding ElementName=TitleBar, Mode=OneWay}"
                           BreadcrumbBar="{Binding ElementName=BreadcrumbBar}" >
            <ui:NavigationView.Header>
                <Grid Margin="42,32,42,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ui:BreadcrumbBar x:Name="BreadcrumbBar"/>
                    <ItemsControl x:Name="icHeaderControls"
                                  Grid.Column="2"/>
                </Grid>
            </ui:NavigationView.Header>
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Cluster Health"
                       TargetPageType="{x:Type local:ClusterHealthPage}"
                       NavigationCacheMode="Disabled"
                       IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="HeartPulse24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Computers"
                                       TargetPageType="{x:Type local:ComputersPage}"
                                       NavigationCacheMode="Disabled"
                                       IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Server24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Monitoring"
                                       TargetPageType="{x:Type local:MonitoringPage}"
                                       NavigationCacheMode="Disabled"
                                       IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Shutdown Program"
                                       TargetPageType="{x:Type local:ShutdownProgramPage}"
                                       NavigationCacheMode="Disabled"
                                       IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Modify Program"
                                       TargetPageType="{x:Type local:ModifyProgramPage}"
                                       NavigationCacheMode="Disabled"
                                       IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Run Program Instance"
                                       TargetPageType="{x:Type local:NewInstancePage}"
                                       NavigationCacheMode="Disabled"
                                       IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Shutdown Program Instance"
                                       TargetPageType="{x:Type local:ShutdownProgramInstancePage}"
                                       NavigationCacheMode="Disabled"
                                       IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <Label x:Name="lblPath"
                       HorizontalAlignment="Center"
                       FontWeight="Bold">Cluster: None</Label>
                <ui:NavigationViewItem x:Name="loadNavItem"
                                       Content="Load cluster"
                                       Click="loadNavItem_Click">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Folder24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
            <ui:NavigationView.ContentOverlay>
                <Grid>
                    <ui:SnackbarPresenter x:Name="RootSnackbarPresenter" />
                </Grid>
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="Cluster Management"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
