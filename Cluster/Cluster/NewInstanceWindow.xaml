<Window x:Class="Cluster.NewInstanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cluster"
        mc:Ignorable="d"
        Title="New Instance" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center"
                   FontSize="24">Add a new instance</Label>
            <Label>Program:</Label>
            <ComboBox x:Name="cbProgram"/>
            <Label>Processor Capacity:</Label>
            <ComboBox x:Name="cbComputer"
             Margin="0 0 0 16"/>
            <Button x:Name="btnAdd"
                    Click="btnAdd_Click">Add</Button>
        </StackPanel>
    </Grid>
</Window>
